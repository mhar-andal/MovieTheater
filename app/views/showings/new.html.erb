<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12 ticket-new centered">
      <% if @showing.errors.any? %>
        <% @showing.errors.full_messages.each do |error| %>
          <p style="color: red"><%= error %>!</p>
        <% end %>
      <% end %>
      <form method="post" action="/showings/new">
        <div class="form-group">
          <label>Time</label>
          <input type="text" class="form-control" placeholder="Ex. 2017/01/18 19:00" name="showing[start_time]" id="datetimepicker" required>
        </div>
        <div class="form-group">
          <label>Movie</label>
          <select class="form-control" name="showing[movie]">
            <% @movies.each do |movie| %>
              <option><%= movie.title %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <label>Cinema</label>
          <select class="form-control" name="showing[cinema]">
            <% @cinemas.each do |cinema| %>
              <option><%= cinema.id %></option>
            <% end %>
          </select>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
